use strict;
use NethServer::SSSD;
use NethServer::LdapClient;
use NethServer::Password;
use NethServer::AccountsList;
use Sys::Hostname;

my $event = shift;

my $sssd = NethServer::SSSD->new('BindDN' => 'cn=libuser,dc=directory,dc=nh', 'BindPassword' => NethServer::Password->new('libuser')->getAscii());

if( ! $sssd->isLocalProvider()) {
    # nothing to do on remote providers
    exit(0);
}

my $ldap = NethServer::LdapClient::connect($sssd);
my $al = NethServer::AccountsList->new($sssd);

my $errors = 0;
my ($systemName, $domainName) = split(/\./, Sys::Hostname::hostname(), 2);

NethServer::LdapClient::paged_search($sssd, $ldap,
    'base' => $sssd->userDN(),
    'scope' => 'subtree',
    'deref' => 'never',
    'filter' => "(&(objectClass=posixAccount)(!(mail=*\@$domainName)))",
    'callback' => \&_cb_fix_mail
);

sub _cb_fix_mail
{
    my $message = shift;
    my $entry = shift;

    my $user = $entry->get_value('uid');
    if($al->is_system_user($user)) {
        return;
    }

    my $result = $ldap->modify($entry->dn(), 'replace' => {'mail' => sprintf('%s@%s', $user, $domainName)});
    if($result->is_error()) {
        $errors ++;
    }
}

exit($errors > 0 ? 1 : 0);
