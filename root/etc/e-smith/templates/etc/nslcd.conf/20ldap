#
# 20ldap
# {
 use NethServer::Directory;
 use NethServer::Password;
 $suffix = NethServer::Directory::getInternalSuffix();
 '';
}

uri         ldapi://
base        { $suffix }
binddn      cn=pam,{ $suffix }
bindpw      { NethServer::Password::store('pam') }
rootpwmoddn cn=pam,{ $suffix }
rootpwmodpw { NethServer::Password::store('pam') }





